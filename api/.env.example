# Database
DATABASE_URL=postgresql://user:pass@host:5432/dbname

# API Keys
GEMINI_API_KEY=your_gemini_api_key_here
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@stayhustler.com

# Security
UNSUBSCRIBE_SECRET=random_secret_for_unsubscribe_tokens

# CORS (optional)
ALLOWED_ORIGIN=https://stayhustler.com

# Admin Area (REQUIRED for admin access)
ADMIN_USER=admin
ADMIN_PASS=your_secure_password_here
ADMIN_PATH=/admin

# Stripe (REQUIRED for payments)
STRIPE_SECRET_KEY=sk_live_... or sk_test_...
PUBLIC_BASE_URL=https://stayhustler.com
# API_BASE_URL is where THIS server is hosted (for Stripe redirects)
# On Railway, this is auto-detected via RAILWAY_PUBLIC_DOMAIN
API_BASE_URL=https://stayhustler-production.up.railway.app

# Results Access Control (REQUIRED)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
RESULTS_COOKIE_SECRET=your_random_64_char_secret_here

# Environment
NODE_ENV=production
PORT=3000
